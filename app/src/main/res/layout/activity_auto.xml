<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#AACCDD"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bit_bus.gaurav.bit_bus.Auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+91-8877104944"
        android:textIsSelectable="true"
        android:textColor="#b0143a"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/auto_no"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/auto_name"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/auto_no"
        android:layout_alignLeft="@+id/auto_no"
        android:layout_alignStart="@+id/auto_no" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Auto No."
        android:textSize="30dp"
        android:id="@+id/auto_ano"
        android:layout_below="@+id/auto_name"
        android:layout_alignLeft="@+id/auto_name"
        android:layout_alignStart="@+id/auto_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call !"
        android:id="@+id/auto_callb"
        android:layout_below="@+id/auto_ano"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Another Auto"
        android:id="@+id/auto_aautob"
        android:layout_below="@+id/auto_callb"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

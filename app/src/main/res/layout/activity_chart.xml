<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AACCDD"
    android:weightSum="1">


    <Spinner
        android:layout_height="50dp"
        android:id="@+id/ch_sp1"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_width="130dp"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined" />

    <Spinner
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/ch_sp2"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_alignTop="@+id/ch_sp1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined" />

    <Spinner
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:id="@+id/ch_sp3"
        android:layout_below="@+id/ch_sp1"
        android:layout_centerHorizontal="true"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined" />

   <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/ch_sp3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ch_cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX:XX"
                android:textSize="40dp"
                android:textColor="#559966"
                android:textStyle="normal"
                android:id="@+id/ch_tv"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
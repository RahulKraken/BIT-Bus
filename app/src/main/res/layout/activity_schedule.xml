<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBCCDD"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bit_bus.gaurav.bit_bus.Schedule">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColorHighlight="#AABBCC"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Student Bus"
        android:id="@+id/sc_sb"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="XX.XX"
        android:textSize="50dp"
        android:id="@+id/sc_sbt"
        android:layout_below="@+id/sc_sb"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:textColor="#FFFFFF"
        android:background="#2196f3"
        android:textStyle="bold"
        android:id="@+id/sc_b1"
        android:layout_below="@+id/sc_sbt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:text="Prev"
        android:textColor="#FFFFFF"
        android:background="#2196f3"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sc_sbt"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:id="@+id/sc_pb1" />
    <Button
        android:text="PREV"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="#2196f3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sc_b3"
        android:layout_alignRight="@+id/sc_pb1"
        android:layout_alignEnd="@+id/sc_pb1"
        android:id="@+id/sc_pb2" />


    <Button
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:background="#2196f3"
        android:id="@+id/sc_b2"
        android:layout_alignTop="@+id/sc_b1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Staff Bus"
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="XX.XX"
        android:textSize="50dp"
        android:id="@+id/sc_sbt1"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/sc_b3"
        android:textColor="#FFFFFF"
        android:background="#2196f3"
        android:layout_below="@+id/sc_sbt1"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textStyle="bold"
        android:id="@+id/sc_b4"
        android:layout_alignTop="@+id/sc_b3"
        android:textColor="#FFFFFF"
        android:background="#2196f3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xx"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/sc_day"
        android:layout_above="@+id/sc_b2"
        android:layout_toRightOf="@+id/sc_sbt"
        android:layout_toEndOf="@+id/sc_sbt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="xx"
        android:id="@+id/sc_weekday1"
        android:layout_above="@+id/sc_b4"
        android:layout_toRightOf="@+id/sc_sbt1"
        android:layout_toEndOf="@+id/sc_sbt1" />

    <TextView
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="#12ACBD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="From BIT"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
